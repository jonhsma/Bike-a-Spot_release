<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.pushpy.park_a_bike.MainActivity">

    <FrameLayout
        android:id="@+id/streetViewFrame"
        android:layout_width="match_parent"
        android:layout_height="100px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:id="@+id/linLayout_buttonBar"
        android:background="@color/interface_green">

        <Button
            android:id="@+id/button_searchButton"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:backgroundTint="@color/interface_white"
            android:fontFamily="sans-serif"
            android:text="@string/searchButtonText"
            android:textAllCaps="false"
            android:textColor="@color/interface_purple"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_parkButton"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:backgroundTint="@color/interface_white"
            android:fontFamily="sans-serif"
            android:text="@string/parkButtonText"
            android:textAllCaps="false"
            android:textColor="@color/interface_blue"
            android:textSize="12sp" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/mapFrame"
        android:layout_width="match_parent"
        android:layout_height="600px"
        />

</LinearLayout>